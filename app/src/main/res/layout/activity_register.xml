<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <TextView
        android:id="@+id/creeCompteTV"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@id/ETprenom"
        android:layout_alignLeft="@id/ETprenom"
        android:text="CrÃ©er un nouveau compte"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ETprenom"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/creeCompteTV"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Prenom"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_action_user"
        />
    <EditText
        android:id="@+id/ETnom"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETprenom"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Nom"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_action_password"
        />
    <EditText
        android:id="@+id/ETemail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETnom"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_action_email"
        />
    <EditText
        android:id="@+id/ETpassword"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETemail"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_action_user"
        />
    <EditText
        android:id="@+id/ET213"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETpassword"
        android:layout_alignStart="@+id/ETpassword"
        android:layout_alignLeft="@+id/ETpassword"
        android:layout_marginTop="40dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:text="+213"
        android:drawableLeft="@drawable/ic_action_phone"
         />
    <EditText
        android:id="@+id/ETnumber"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ETpassword"
        android:layout_alignEnd="@+id/ETpassword"
        android:layout_alignRight="@+id/ETpassword"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Number"
        android:textSize="16dp"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_action_user"
        />
    <Button
        android:id="@+id/registerBTN"
        android:layout_below="@+id/ETnumber"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

</RelativeLayout>